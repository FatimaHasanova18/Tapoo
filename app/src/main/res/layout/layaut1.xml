<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebut"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/xx" />


        <TextView
            android:id="@+id/but1"
            android:layout_width="62dp"
            android:layout_height="53dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/shapebut2"
            android:paddingTop="16dp"
            android:paddingStart="4dp"
            />
        <ImageView
            android:id="@+id/sesss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-35dp"
            android:src="@drawable/sessss" />

        <ImageView
            android:id="@+id/sessiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-23dp"
            android:src="@drawable/sessiz" />

        <Button
            android:id="@+id/but2"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="continu"
            android:layout_marginEnd="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/shapebut2"
            android:drawableEnd="@drawable/continiu"
            android:layout_marginStart="60dp"
            android:paddingStart="-50dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="-5dp"
            />


        <Button
            android:id="@+id/but3"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/shapebut2"
            android:drawableEnd="@drawable/frame"
            android:paddingStart="-40dp"
            android:text="restart"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
           android:layout_marginStart="110dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/home"
            app:layout_constraintEnd_toStartOf="@id/restart"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</androidx.cardview.widget.CardView>